<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgkk"
    tools:context=".Kopasusarabika">
    <TextView
        android:id="@+id/kopasusarabika_txt1"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:text="KopasusArabika"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_header1"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/kopasusarabika_gambar1"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/kopasusarabika"
        android:layout_marginTop="80dp" />

    <TextView
        android:id="@+id/kopasusarabika_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi"
        android:layout_below="@+id/kopasusarabika_gambar1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/kopasusarabika_txt3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kopasusarabika_txt2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_deskripsi"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:gravity="center"
        android:text="arabika memiliki ciri khas rasa lebih halus, kompleks, dan sedikit pahit kopasus arabika ini ada untuk anda yang ingin mengurangi sensasi pahit berikut resep nya espresso arabika- gulaaren- susu cair- susu evaporasi- iced"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"/>

</RelativeLayout>